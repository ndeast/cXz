# Discogs API Configuration
# You can use either personal access token OR consumer key/secret
DISCOGS_USER_TOKEN=your_discogs_user_token_here

# Alternative: Consumer key/secret for OAuth (not implemented yet, use token above)
DISCOGS_CONSUMER_KEY=your_discogs_consumer_key_here
DISCOGS_CONSUMER_SECRET=your_discogs_consumer_secret_here

# Google Gemini API Configuration (for LLM integration via llm package)
GOOGLE_API_KEY=your_google_api_key_here

# LLM Configuration - requires llm-gemini plugin
LLM_MODEL=gemini/gemini-2.5-flash

# Rate limiting configuration
DISCOGS_REQUESTS_PER_MINUTE=60